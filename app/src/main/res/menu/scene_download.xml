        android:icon="@drawable/v_play_dark_x24"
        android:title="@string/download_start_all"
        app:showAsAction="always"/>

    <item
        android:id="@+id/action_stop_all"
        android:icon="@drawable/v_pause_dark_x24"
        android:title="@string/download_stop_all"
        app:showAsAction="ifRoom"/>

    <item
      android:id="@+id/action_reset_reading_progress"
      android:title="@string/download_reset_reading_progress"
      app:showAsAction="never"/>

    <item

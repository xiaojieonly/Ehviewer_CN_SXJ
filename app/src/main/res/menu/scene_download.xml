                android:title="@string/download_filter_by_status"
                app:showAsAction="ifRoom">
                <menu>
                    <item
                        android:id="@+id/all"
                        android:title="@string/download_status_all"
                        app:showAsAction="ifRoom"/>
                    <item
                        android:id="@+id/download_done"
                        android:title="@string/download_status_done"
                        app:showAsAction="ifRoom"/>
                    <item
                        android:id="@+id/waiting"
                        android:title="@string/download_status_waiting"
                        app:showAsAction="ifRoom"/>
                    <item
                        android:id="@+id/downloading"
                        android:title="@string/download_status_downloading"
                        app:showAsAction="ifRoom"/>
                    <item
                        android:id="@+id/failed"
                        android:title="@string/download_status_failed"
                        app:showAsAction="ifRoom"/>
                </menu>
            </item>

            <item android:id="@+id/sort"
                android:title="@string/sort_download_list"
                app:showAsAction="always">
                <menu>
                    <item
                        android:id="@+id/sort_by_default"
                        android:title="@string/default_sort"
                        app:showAsAction="ifRoom"/>
                    <item

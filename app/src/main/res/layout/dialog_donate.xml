<!--linkpackage com.hippo.ehviewer.ui.fragment.AboutFragment-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/keyline_margin">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/settings_about_donate_message" />

  <Space
      android:layout_width="wrap_content"
      android:layout_height="@dimen/keyline_margin" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/settings_about_donate_alipay"
      android:textColor="?attr/textColorThemePrimary"
      android:textSize="@dimen/text_little_small"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/alipay_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center" />

  <Button
      android:id="@+id/alipay_copy"
      style="@style/Widget.AppCompat.Button.Borderless.Colored"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/settings_about_donate_copy" />

  <Space
      android:layout_width="wrap_content"
      android:layout_height="@dimen/keyline_margin" />

  <!--      -->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/settings_about_donate_guide"
      android:textColor="?attr/textColorThemePrimary2"
      android:textSize="@dimen/text_little_small"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/guide_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center" />

</LinearLayout>

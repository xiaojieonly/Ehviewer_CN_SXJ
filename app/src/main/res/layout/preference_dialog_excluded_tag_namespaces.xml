<com.hippo.widget.IndicatingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Indicating"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?attr/dialogPreferredPadding"
        android:paddingTop="@dimen/abc_dialog_padding_top_material"
        android:paddingRight="?attr/dialogPreferredPadding">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/tag_group_reclass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="reclass"
                tools:ignore="HardcodedText"/>

            <CheckBox
                android:id="@+id/tag_group_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="language"
                tools:ignore="HardcodedText"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/tag_group_parody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="parody"
                tools:ignore="HardcodedText"/>

            <CheckBox
                android:id="@+id/tag_group_character"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="character"
                tools:ignore="HardcodedText"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/tag_group_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="group"
                tools:ignore="HardcodedText"/>

            <CheckBox
                android:id="@+id/tag_group_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="artist"
                tools:ignore="HardcodedText"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/tag_group_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="male"
                tools:ignore="HardcodedText"/>

            <CheckBox
                android:id="@+id/tag_group_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="female"
                tools:ignore="HardcodedText"/>

        </TableRow>
    </TableLayout>
</com.hippo.widget.IndicatingScrollView>
